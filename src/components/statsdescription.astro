---
// Code originally from https://github.com/youthacks/site and modified
import BarChart from "./barchart.astro";
---

<html>
  <div class="container">
    <slot />
    <BarChart />
    <style>

      
      .container {
        display: grid;
        height: auto;
        grid-template-columns: 1fr 1fr;
        margin-top: 1em;
      }

      /* Colaspe components on top of each other if using mobile layout */
      @media only screen and (max-width: 900px) {
        .container {
          grid-template-columns: 1fr;
          margin-bottom:2em;
        }
        .container :global(.description .support-button) {
          place-items: center;
        }
      }
      .container :global(.stats) {
        display: flex;
        justify-content: center;
      }

      .container :global(.stats .stats_container) {
        width: 70%;
        height: 70%;
        display: block;

        align-self: center;

        border-radius: 18px;
      }

      .container :global(.stats p) {
        font-family: "Lato", sans-serif;
        font-weight: 400;
        font-style: normal;
      }

      .container :global(.stats .stats_container img) {
        width: 100%;
        height: 100%;
        display: flex;
        margin: auto;

        border-radius: 18px;
        object-fit: cover;
      }
      .container :global(.description) {
        display: flex;
        justify-content: center;
      }
      .container :global(.description .text_wrapper) {
        margin: 3em;
        
      }
      .container :global(.description .text_wrapper h1) {
        font-family: "Lato", sans-serif;
        font-weight:600;
        font-style: bold;
        font-size: 5em;
        text-decoration: underline;
        color:white;

      }
      .container :global(.description .text_wrapper h2) {
        font-family: "Lato", sans-serif;
        font-weight: 600;
        font-style: normal;
        font-size: 3em;
        color:white;
      }
      .container :global(.description .text_wrapper p) {
        font-family: "Lato", sans-serif;
        font-weight: 400;
        font-style: normal;
        color:white;
      }
    </style>
  </div>


</html>
