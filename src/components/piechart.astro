<div class = "piechart">
  <canvas id="chart2"></canvas>
</div>

<style>
  .piechart{
  position: relative; 
  width: inherit; 
  /* background-color: white; */
  height: inherit;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const chartData = {
      labels: ["Debated", "Not Debated"],
      datasets: [{
        label: '% that graduated',
        data: [65, 48],
      }],
    };

    const chartOptions = {
      responsive: true,
      maintainAspectRatio: false,
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    };
    const ctx = document.getElementById('chart2');
    new Chart(ctx, {
      type: 'pie',
      data: chartData,
      options: chartOptions,
    });
  });
</script>